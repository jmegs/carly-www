@import '../utils/vars'

@font-face
  font-family: 'Sporting'
  src:  url('../fonts/Sporting_Grotesque-Bold.woff2') format('woff2'),
        url('../fonts/Sporting_Grotesque-Bold.woff') format('woff')

@font-face
  font-family: 'Rubik'
  src:  url('../fonts/Rubik-Regular.woff2') format('woff2'),
        url('../fonts/Rubik-Regular.woff') format('woff')

// Lil Reset
html
  box-sizing: border-box

*, *:before, *:after
  box-sizing: inherit

body, h1, h2, h3, h4, h5, h6, p, ol, ul
  margin: 0
  padding: 0
  font-weight: normal


ol, ul
  list-style: none

img
  max-width: 100%;
  height: auto;

// Global Styling
html
  // background: whitesmoke
  font-size: 16px
  @media (min-width: 40em)
    font-size: 20px 

body
  font-family: Rubik, sans-serif      
  font-size: 1rem
  max-width: 1280px
  margin: 2rem auto
  background: white